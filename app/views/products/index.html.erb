<main class="container">
    <p id="notice"><%= notice %></p>
    <div class="row">
      <% @products.each do |product| %>
      <section class="col-4">
          <section class="card">
              <section class="card-block">
                <img class="card-img-top" src="http://placehold.it/250x250" alt="Card image cap">
                  <header class="card-title product-name">
                      <%= product.name %>
                  </header>
                  <br />
                  <section class="card-text product-price">
                      <%= product.price %>
                  </section>
                  <br />
                  <section class="card-text product-description">
                      <%= product.description.truncate(100) %>
                  </section>
              </section>
          </section>
      </section>
      <% end %>
    </div>

    <%= paginate @products %>
</main>
